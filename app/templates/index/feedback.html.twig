{% block title %}Feedback{% endblock %}

{% extends 'base.html.twig' %}

{% block content %}
    <div class="feedback{% if isApp == true %}-mobile{% endif %}">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Sag uns deine Meinung</h1>

            <label for="feedback_emailAddress">Deine E-Mail Adresse</label>
            <input type="text" id="feedback_emailAddress" name="feedback[emailAddress]" class="form-control"maxlength="255" autofocus="autofocus">

            <label for="feedback_name">Dein Name</label>
            <input type="text" id="feedback_name" name="feedback[name]" class="form-control" maxlength="255">

            <label for="feedback_content" class="required">Nachricht</label>
            <textarea id="feedback_content" name="feedback[content]" class="form-control" required="required"></textarea>

            <input type="hidden" id="feedback__token" name="feedback[_token]" value="{{ csrf_token('feedback') }}">

            <p></p>
            <button class="btn btn-lg btn-primary" type="submit">
                Absenden
            </button>
        </form>
    </div>
{% endblock %}
